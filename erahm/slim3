slim3:
    description: Slim3 API base using PHP7
    require:
        - kcmerrill/automagicproxy
    image: erahm/slim3
    remove: true
    build: src/
    name: ${PWD##*/}
    P: true
    setup:
        - git clone git@github.com:erahm/slim3-docker.git src && cd src/ && git checkout master && cd app/ && ./composer.phar install
    v:
        - $PWD/src/app/:/var/www/html
